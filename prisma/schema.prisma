generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum to define user access types
enum AccessType {
  SUPER_ADMIN
  ADMIN
  MEMBER
  GUEST
}

model Organisation {
  id        String   @id @default(uuid())
  name      String
  status    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]

  @@index([id])
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  firstName      String
  lastName       String
  password       String
  status         Int
  sessionId      String?
  authMethod     String
  organisationId String
  accessType     AccessType   @default(SUPER_ADMIN)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organisation   Organisation @relation(fields: [organisationId], references: [id])

  @@index([organisationId])
  @@index([id])
}
